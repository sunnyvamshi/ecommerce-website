                    <h1>Total Users List</h1>
                    <a asp-controller="User" asp-action="Create" class="btn btn-dark">
                        Add a new user <i class="bi bi-plus-circle"></i>
                    </a>
                </div>
                <div class="card-body">
                    <table id="tblsData" class="table table-bordered table-striped">

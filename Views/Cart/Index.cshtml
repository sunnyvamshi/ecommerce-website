@model List<ShoppingCart>

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container">
    <div class="card mt-5">
        <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
					<h5 class="pt-2 text-white<a href=" c:\users\dell\source\repos\blukyweb\views\cart\index.cshtml">
						c:\users\dell\source\repos\blukyweb\views\cart\index.cshtml</a>">
                        Shopping Cart
                    </h5>
                </div>
                <div class="col-6 text-end">
                    <a href="#" class="btn btn-outline-primary text-uppercase mb-5 btn-sm"><small>Continue Shopping</small></a>
                </div>
            </div>
        </div>
        <div class="card-body my-4">
            @foreach (var item in Model)
            {
                <div class="row border-bottom pb-3">
                    <div class="d-none d-lg-block col-lg-1 text-center py-2">
                        <img src="@item.Product.ImageUrl" class="rounded" width="100%" />
                    </div>
                    <div class="col-12 col-lg-6 pt-md-3">
                        <h5 class="text-uppercase text-secondary"><strong>@item.Product.Title</strong></h5>
                        <p><small>@item.Product.Description</small></p>
                    </div>
                    <div class="col-12 col-lg-5 text-center row">
                        <div class="col-3 text-md-right pt-2 pt-md-4">
                            <h6 class="fw-semibold">
                                @item.Product.Price
                                <span class="text-muted">&nbsp;x&nbsp;</span>
                                @item.Count
                            </h6>
                        </div>
                        <div class="col-6 col-sm-4 col-lg-6 pt-2">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="pluss" asp-route-id="@item.Id" class="btn btn-outline-primary bg-gradient py-2">
                                    <i class="bi bi-plus-square"></i>
                                </a> &nbsp;
                                <a asp-action="minuss" asp-route-cartId="@item.Id" class="btn btn-outline-primary bg-gradient py-2">
                                    <i class="bi bi-dash-square"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                            <a asp-action="delete" asp-route-cartId="@item.Id" class="btn btn-danger bg-gradient py-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="card-footer bg-white border-0">
            <div class="row">
                <div class="col-md-4 offset-md-4">
                    <ul class="list-group mb-4">
                        <li class="d-flex justify-content-between align-items-center">
                            <h5 class="text-dark fw-semibold text-uppercase"> Total (USD)</h5>
                            <h4 class="text-dark fw-bolder">$@ViewBag.TotalSum.ToString("0.00") </h4>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 offset-md-5">
                    <a asp-controller="Cart" asp-action="summary" class="btn btn-primary border-0 bg-gradient w-100 py-2">Proceed to Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>

@model List<Category>
<partial name="_Notification"/>


<table class="table table-bordered table-striped">
	<div class="container pt-4 pb-3">
		<div class="row">
			<div class="col-md-6">
				
				<h1>category list</h1>

			</div>
			<div class="col-md-6">
				<a asp-controller="category" asp-action="Create"
				  class="btn btn-dark">add a new category  <i class="bi bi-plus-circle"></i></></a>
			</div>
		</div>
	</div>
	<thead>
		<tr>
			<th>Category Name</th>
			<th>display-by-order</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.Description</td>
				<td>
					<div class="w-75 btn-group">
						<a asp-controller="Category" asp-action="Editss" asp-route-id="@obj.Id" class="btn btn-primary mx-2">edit<i class="bi bi-pencil-square"></i></a>
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> delete<i class="bi bi-pencil-square"></i></a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

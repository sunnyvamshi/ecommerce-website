@model Bulky.models.Company

<h1>Delete Category</h1>
<form asp-controller="Company" asp-action="DeleteConfirmed" method="post">
    

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Company Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">PhoneNumber:</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StreetAdress">StreetAdress:</label>
        <input asp-for="StreetAdress" class="form-control" />
        <span asp-validation-for="StreetAdress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City">City:</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State">State:</label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>




    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-controller="Product" asp-action="index" class="btn btn-secondary">Back to List</a>
    </div>



        <a asp-controller="Company" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

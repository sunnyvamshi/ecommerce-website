@model List<Product>

<div class="container mt-4">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@product.ImageUrl" class="card-img-top" alt="Product Image" height="100%">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center text-warning">@product.Title</h5>
                        <p class="card-text text-center text-primary">by: @product.Author</p>
                        <p class="card-text text-center">
                            List Price: <span class="text-danger">$@product.ListPrice</span>
                        </p>
                        <p class="card-text text-center">as low as: $@product.Price50</p>
                        <div class="mt-auto d-flex justify-content-center">
                            <a asp-action="Details" asp-route-Id="@product.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
